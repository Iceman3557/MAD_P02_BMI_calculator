<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Third_Activity">

    <EditText
        android:id="@+id/heightAns_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/next_button"
        app:layout_constraintStart_toStartOf="@+id/weightAns_text"
        app:layout_constraintTop_toBottomOf="@+id/height_text" />

    <TextView
        android:id="@+id/heightUnit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unit"
        app:layout_constraintBottom_toBottomOf="@+id/heightAns_text"
        app:layout_constraintStart_toEndOf="@+id/heightAns_text" />

    <TextView
        android:id="@+id/height_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Height?"
        app:layout_constraintBottom_toTopOf="@+id/heightAns_text"
        app:layout_constraintEnd_toEndOf="@+id/weightAns_text"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="@+id/weightAns_text"
        app:layout_constraintTop_toBottomOf="@+id/weightAns_text" />

    <SeekBar
        android:id="@+id/height_seek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/heightAns_text"
        app:layout_constraintEnd_toEndOf="@+id/heightAns_text"
        app:layout_constraintStart_toStartOf="@+id/heightAns_text" />

    <TextView
        android:id="@+id/selected_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have selected *unselected* System"
        app:layout_constraintBottom_toTopOf="@+id/weight_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <SeekBar
        android:id="@+id/weight_seek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/weightAns_text"
        app:layout_constraintEnd_toEndOf="@+id/weightAns_text"
        app:layout_constraintStart_toStartOf="@+id/weightAns_text" />

    <TextView
        android:id="@+id/weight_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Weight?"
        app:layout_constraintBottom_toTopOf="@+id/weightAns_text"
        app:layout_constraintEnd_toEndOf="@+id/selected_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/selected_text"
        app:layout_constraintTop_toBottomOf="@+id/selected_text" />

    <TextView
        android:id="@+id/weightUnit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unit"
        app:layout_constraintBottom_toBottomOf="@+id/weightAns_text"
        app:layout_constraintStart_toEndOf="@+id/weightAns_text" />

    <EditText
        android:id="@+id/weightAns_text"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/height_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_text" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/heightAns_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/heightAns_text"
        app:layout_constraintTop_toBottomOf="@+id/heightAns_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        app:layout_constraintTop_toBottomOf="@+id/next_button"
        tools:layout_editor_absoluteX="1dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>